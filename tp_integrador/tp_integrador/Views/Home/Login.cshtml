@model tp_integrador.Models.Usuarios
@{
    /**/

    ViewBag.Title = "Login";



}


@if (Model.IsAuthenticated())
{
    <p><h4>idusuario = @Session["IDUsuario"] </h4></p>
    if ((Boolean)Session["Admin"])

    {
        <div class="jumbotron">
            <p><h3>Aplicaciones</h3></p>


            @Html.ActionLink("Cantidad de meses", "Listar", "Home", "/Home/listar", new { @class = "btn btn-primary btn-lg" })

            @Html.ActionLink("Importar desde json", "JsonImport", "Home", "/Home/JsonImport", new { @class = "btn btn-primary btn-lg" })
        </div>

    }
    else
    {
        <div class="jumbotron">
            <p><h3>Aplicaciones</h3></p>
            @Html.ActionLink("Cargar Dispositivos", "CargarDispositivo", "Cliente", "/Cliente/CargarDispositivo", new { @class = "btn btn-primary btn-lg" })

            @Html.ActionLink("Acceder al Dashboard", "Dashboard", "Cliente", "/Cliente/Dashboard", new { @class = "btn btn-primary btn-lg" })

            @Html.ActionLink("Gestionar Dispositibos", "GestionDeDispositivos", "Cliente", "/Cliente/GestionDeDispositivos", new { @class = "btn btn-primary btn-lg" })
        </div>

    }
}


else


{

    {
        <div class="jumbotron">
            <p><h3>Los datos ingresados son incorrectos.</h3></p>

            @Html.ActionLink("Iniciar secion", "Index", "Home", "/Home/Index", new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Recuperar contraseña", "Listar", "Home", "/Home/listar", new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Registrarse", "Listar", "Home", "/Home/listar", new { @class = "btn btn-primary btn-lg" })
        </div>
    }
}