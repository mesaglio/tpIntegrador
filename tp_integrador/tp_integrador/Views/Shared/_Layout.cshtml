<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>@ViewBag.Title - Sistema de Gesti&oacute;n Energ&eacute;tica</title>

	<!-- Bootstrap core CSS -->
	<link href="~/Content/bootstrap.min.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="~/Content/sticky-footer-navbar.css" rel="stylesheet">

</head>
<body>

	<header>
		<!-- Fixed navbar -->
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

			@if (Session["Admin"] != null)
			{
				if ((Boolean)Session["Admin"]){@Html.ActionLink("SGE", "Administrador", "Home", new { @class = "navbar-brand" });}
				else {@Html.ActionLink("SGE", "Cliente", "Home", new { @class = "navbar-brand" });}
			}
			else {@Html.ActionLink("SGE", "Index", "Home", new { @class = "navbar-brand" })}

			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">
				<ul class="navbar-nav mr-auto">

					<li class="nav-item">
						@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "nav-link" })
					</li>

					<li class="nav-item">
						@if (Session["Admin"] != null && (Boolean)Session["Admin"])
						{
							@Html.ActionLink("Mapa de Transformadores", "Maps", "Home", "/Home/Maps", new { @class = "nav-link" });
						}
					</li>
				</ul>

				<form class="form-inline mt-2 mt-md-0">
					@if (Session["IDUsuario"] == null) { }
					else {@Html.ActionLink("Cerrar Sesión", "Logout", "Home", new { @class = "btn btn-outline-primary" });	}
				</form>

			</div>
		</nav>
	</header>

	<main role="main" class="container">
		@RenderBody()
	</main>

	<footer class="footer">
		<div class="container">
			<span class="text-muted">@DateTime.Now.Year - Sistema de Gesti&oacute;n Energ&eacute;tica - EnCasaCompilaba</span>
		</div>
	</footer>

	<!-- Bootstrap core JavaScript
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
	<script src="~/Scripts/popper.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>

	@RenderSection("scripts", required: false)
</body>
</html>
